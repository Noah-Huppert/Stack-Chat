<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/navigation_drawer_fragment_user_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/navigation_drawer_padding">
        <ImageView
            android:id="@+id/navigation_drawer_fragment_user_avatar"
            android:layout_width="@dimen/navigation_drawer_fragment_user_avatar_width"
            android:layout_height="@dimen/navigation_drawer_fragment_user_avatar_height"
            android:background="@drawable/ic_user_avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/navigation_drawer_fragment_user_name_height"
            android:layout_toRightOf="@+id/navigation_drawer_fragment_user_avatar"
            android:layout_toEndOf="@+id/navigation_drawer_fragment_user_avatar"
            android:layout_marginLeft="@dimen/navigation_drawer_fragment_user_name_margin_left"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="@dimen/navigation_drawer_fragment_user_name_size"
            android:text="User Name"/>
    </RelativeLayout>

    <View
        android:id="@+id/navigation_drawer_fragment_user_info_divider_line"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="@dimen/navigation_drawer_fragment_user_info_divider_size"
        android:layout_below="@+id/navigation_drawer_fragment_user_info_layout"
        android:layout_marginTop="@dimen/navigation_drawer_fragment_divider_line_margin_top"
        android:background="@android:color/background_dark"/>
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigation_drawer_fragment_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical"
        android:layout_below="@+id/navigation_drawer_fragment_user_info_divider_line"
        android:padding="@dimen/navigation_drawer_padding"/>

</RelativeLayout>