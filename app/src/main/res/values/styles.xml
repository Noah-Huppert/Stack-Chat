<resources>

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item><!-- Apply Action Bar Style -->
        <item name="android:windowBackground">@color/common_white</item><!-- Main Window Background Color -->
    </style>

    <!-- Action Bar Style -->
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item><!-- Action Bar Background Color -->
        <item name="android:height">56dp</item><!-- Action Bar Height, Adjusted to match Android L -->
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item><!-- Apply Action Bar Text Style -->
    </style>

    <!-- Action Bar Text Style -->
    <style name="AppTheme.ActionBar.TitleText" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20dp</item><!-- Action Bar Text Size -->
        <item name="android:textColor">@color/primary_light</item><!-- Action Bar Text Color -->
        <item name="android:textStyle">bold</item><!-- Action Bar Text Weight -->
    </style>

</resources>
